   <input type="text" id="password1" placeholder="Introduceti prima parola" />
   <input type="text" id="password2" placeholder="Introduceti a doua parola" />
   <input type="button" value="Verifica" onclick="checkPasswords()" />
   <p id="message"></p>

   <script>
   function checkPasswords() {
   const pass1 = document.getElementById("password1").value;
   const pass2 = document.getElementById("password2").value;
   const message = document.getElementById("message");

   if (pass1 === "Taycan" && pass2 === "21") {
   message.textContent = "Felicitari! Mergi in camera 505 ca sa-ti revendici premiul!";
   } else {
   message.textContent = "Parolele nu sunt corecte. Mai incearca o data.";
   }
   }
   </script>
